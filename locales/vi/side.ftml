[[module css]]
#side-bar .collapsible-block-folded {
    background: none;
}
#side-bar .collapsible-block-link {
    margin-left: 0;
}
#side-bar .side-block.resources {
    background: #e7f7e9;
}

.grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-items: center;
    text-align: center;
    grid-gap: 0.25rem;
    margin: 0.5rem 0 1rem
}
#side-bar .branch a:hover img, #side-bar .branch a:focus img {
    transition: 100ms;
    transform: scale(1.2)
}

#side-bar .hover {
    color: #bb0011;
    font-weight: bold
}
#side-bar .hover .hover-text {
    position: absolute;
    display: none;
    margin: 2rem;
    height: auto;
    width: auto;
    background: white;
    border: 2px solid black;
    color: black;
    padding: 0.5rem;
    pointer-events: none;
    transition: opacity 0.15s linear, right 0.3s cubic-bezier(.08,.72,.5,.94)
}

#side-bar .hover:hover {
   text-decoration: none;
   border-bottom: none;
   color: #333
}
#side-bar .hover:hover .hover-text {
    display: inline
}
[[/module]]
